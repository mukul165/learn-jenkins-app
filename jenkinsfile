pipeline {
    agent any

    stages {
        stage('build') {
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                    cd build 
                    ls -a | grep index.html
                '''
            }
        }
    stage('Test') {
        steps{
            sh 'echo "Test stage"'
            npm test
        }
    }
    }
}
